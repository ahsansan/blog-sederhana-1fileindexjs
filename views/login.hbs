<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="public/style/style.css" />
  </head>
  <body>
    <!-- NavBar -->
    <nav>
      <div class="left">
        <img src="public/images/logo-kecil.png">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="blog">Blog</a></li>
        </ul>
      </div>
      <div class="right">
				{{#if isLogin}}
        <div class="btn-aut">
					<ul>
					<li><span style="color: #888;">Selamat datang, {{user.name}}</span></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
				</div>
        {{else}}
        <div class="btn-aut">
					<ul>
					<li><a href="/register">Register</a></li>
					<li><a href="/login">Login</a></li>
				</ul>
				</div>
        {{/if}}
				<div class="contact">
				<a href="contact-form">Contact Me</a>
				</div>
			</div>
    </nav>
    <!-- Blog -->
    <!-- Form -->
    {{#if messages.danger}}
<div class="alert alert-danger" role="alert">
  <center>{{messages.danger}}</center>
</div>
    {{/if}}
    <div class="blog">
      <div class="blog-form">
        <div class="form-container">
          <form action="/login" method="POST">
            <h1>Login</h1>
            <div>
              <label for="input-blog-email">Email</label>
              <input type="email" id="input-blog-email" name="email" />
            </div>
            <div>
              <label for="input-blog-password">Password</label>
              <input type="password" id="input-blog-password" name="password" />
            </div>
            <div class="button-group-aut">
              <button>Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <i>Copyright Â© 2021 | <a href="/" style="text-decoration: none;color:#000">Muhammad Maulana Ahsan</a></i>
  </footer>
</body>
</html>