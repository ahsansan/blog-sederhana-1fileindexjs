<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Blog Page</title>
    <link rel="stylesheet" href="/public/style/style.css" />
  </head>
  <body>
    <!-- NavBar -->
    <nav>
      <div class="left">
        <img src="/public/images/logo-kecil.png">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/blog" class="list-active">Blog</a></li>
        </ul>
      </div>
      <div class="right">
				{{#if isLogin}}
        <div class="btn-aut">
					<ul>
					<li><span style="color: #888;">Selamat datang, {{user.name}}</span></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
				</div>
        {{else}}
        <div class="btn-aut">
					<ul>
					<li><a href="/register">Register</a></li>
					<li><a href="/login">Login</a></li>
				</ul>
				</div>
        {{/if}}
				<div class="contact">
				<a href="contact-form">Contact Me</a>
				</div>
			</div>
    </nav>
    <!-- Blog -->
    <!-- Form -->
    <div class="blog">
      <div class="blog-form">
        <div class="form-container">
          <form action="/update-blog/{{blog.id}}" method="POST" enctype="multipart/form-data">
            <h1>Edit Post Blog</h1>
            <div>
              <label for="input-blog-title">Title</label>
              <input id="input-blog-title" name="title" value="{{blog.title}}" />
            </div>
            <div>
              <label for="input-blog-content">Content</label>
              <textarea id="input-blog-content" name="content" class="textarea-blog">{{blog.content}}</textarea>
            </div>
            <div>
              <label>Upload Image</label>
              <div class="input-blog-image-group">
                <label for="input-blog-image">
                  <p>Attach File</p>
                  <img src="/public/images/file.png" alt="file" />
                </label>
                <input type="file" id="input-blog-image" name='image' />
              </div>
            </div>
            <div class="button-group">
              <button>Update Blog</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <i>Copyright Â© 2021 | <a href="/" style="text-decoration: none;color:#000">Muhammad Maulana Ahsan</a></i>
  </footer>
</body>
</html>