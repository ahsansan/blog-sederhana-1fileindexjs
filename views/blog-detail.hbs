<!DOCTYPE html>
<html>
  {{#blog}}
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{this.title}}</title>
    <link rel="stylesheet" href="/public/style/style.css">
  </head>
  <body>
    <nav>
      <div class="left">
        <img src="/public/images/logo-kecil.png">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </div>
      <div class="right">
				{{#if isLogin}}
        <div class="btn-aut">
					<ul>
					<li><span style="color: #888;">Selamat datang, {{user.name}}</span></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
				</div>
        {{else}}
        <div class="btn-aut">
					<ul>
					<li><a href="/register">Register</a></li>
					<li><a href="/login">Login</a></li>
				</ul>
				</div>
        {{/if}}
				<div class="contact">
				<a href="contact-form">Contact Me</a>
				</div>
			</div>
    </nav>
    <!-- Blog -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{this.title}}</h1>
        <div class="author">{{this.post_at}} | {{this.author}}</div>
        <img src="{{this.image}}" alt="detail" />
        <p>
          {{this.content}}
        </p>
      </div>
    </div>
    <footer>
      <i>Copyright Â© 2021 | <a href="/" style="text-decoration: none;color:#000">Muhammad Maulana Ahsan</a></i>
    </footer>
    {{/blog}}
  </body>
</html>