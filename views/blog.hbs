<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blog Post List</title>
    <link rel="stylesheet" href="public/style/style.css" />
  </head>
  <body>
    <!-- NavBar -->
    <nav>
      <div class="left">
        <img src="public/images/logo-kecil.png">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="blog" class="list-active">Blog</a></li>
        </ul>
      </div>
      <div class="right">
        {{#if isLogin}}
        <div class="btn-aut">
					<ul>
					<li><span style="color: #888;">Selamat datang, {{user.name}}</span></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
				</div>
        {{else}}
        <div class="btn-aut">
					<ul>
					<li><a href="/register">Register</a></li>
					<li><a href="/login">Login</a></li>
				</ul>
				</div>
        {{/if}}
				<div class="contact">
				<a href="contact-form">Contact Me</a>
				</div>
			</div>
    </nav>
    <!-- Blog -->
    <!-- Form -->
    {{#if messages.success}}
<div class="alert alert-success" role="alert">
  <center>{{messages.success}}</center>
</div>
    {{/if}}
    <div class="blog">
      {{#if isLogin}}
      <div class="button-blog-container">
        <a href="/add-blog" class="button-blog">Add New Blog</a>
      </div>
      {{/if}}
<!--       <hr class="line" /> -->
      <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->
        {{#each blogs}}
        <div class="blog-list-item">
          <div class="blog-image">
            <img src="{{this.image}}" alt="" />
          </div>
          <div class="blog-content">
            {{#if this.isLogin}}
            <div class="btn-group">
              <a class="btn-edit" href="/update-blog/{{this.id}}">Edit Post</a>
              <a class="btn-delete" href="/delete-blog/{{this.id}}">Delete Blog</a>
            </div>
            {{/if}}
            <h1>
            <a href="/blog-detail/{{this.id}}"
            >{{this.title}}</a
            >
            </h1>
            <div class="detail-blog-content">
              {{this.post_at}} | {{this.author}}
            </div>
            <p>
              {{this.content}}
            </p>
            <div style="text-align: right; font-size: 13px; color: grey; font-style: italic;">
              {{this.post_age}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <footer>
      <i>Copyright Â© 2021 | <a href="/" style="text-decoration: none;color:#000">Muhammad Maulana Ahsan</a></i>
    </footer>
  </body>
</html>